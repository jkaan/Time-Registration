{% extends "layouts/base.twig" %}

{% block header %}

<div data-role="header">
	<h1>
		Studenten in cursus: {{ course[0].cursus_Name }}
	</h1>
</div>

{% endblock header %}

{% block content %}
{% if students is empty %} 

So students is empty..

{% endif %}
<h4>Cursus met Naam: {{ course[0].cursus_Name }} en docent: {{ course[0].user_Name }}</h4>
<table data-role="table" id="table-column-toggle" data-mode="columntoggle" class="ui-responsive table-stroke">
	<thead>
		<tr>
			<th>Student Naam</th>
			<th>Student Email</th>
			<th>Student Code</th>
			<th>Student Klas</th>
		</tr>
	</thead>
	<tbody>
		{% for student in students %}
		<tr>
			<td>{{ student.user_Name }}</td>
			<td>{{ student.user_Email }}</td>
			<td>{{ student.user_Code }}</td>
			<td>{{ student.user_Klas }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<h4>Kies student om toe te voegen</h4>
<form action="{{ constant('BASE') }}/slc/{{ id }}/course/students/{{ courseId }}/add">
	<div class="ui-field-contain">
		<select>
			<option value="1">The 1st Option</option>
			<option value="2">The 2nd Option</option>
			<option value="3">The 3rd Option</option>
			<option value="4">The 4th Option</option>
		</select>
	</div>
	<input type="submit" value="Voeg toe" />
</form>


{% endblock content %}
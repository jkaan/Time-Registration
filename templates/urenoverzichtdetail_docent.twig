{% extends "layouts/base.twig" %}

{% block header %}

<div data-role="header">
	<a href="index.html" data-rel="back">Back</a>
	<h1>Uren per onderdeel van de Cursus {{ cursus_Name }} - {{ student }} - Week {{ weeknr }}</h1>
	<a href="#" class="print" rel="urenoverzicht_perOnderdeel" onclick="printOverzicht()">Print</a>
</div>

{% endblock header %}

{% block content %}
	<table data-role="table" id="urenoverzicht_perOnderdeel" data-mode="columntoggle" class="ui-responsive table-stroke">
		<thead>
			<tr>
				<th>Onderdeel</th>
				<th>Totaal uren deze week</th>
				<th>Totale uren per onderdeel t/m  deze week.</th>
			</tr>
		</thead>
		<tbody>
			{% for data in onderdeeloverzichtarray %}
			<tr>
				<td>{{ data.onderdeel }}</td>
				<td>{{ data.studielast }}</td>
				<td>{{ data.totaalPerOnderdeel }} | {{ data.berekening | raw}} norm. {{ data.onderdeel_Norm }} </td>
			</tr>
			{% endfor %}				
		</tbody>
	</table>

		{% endblock content %}
{% extends "layouts/base.twig" %}

{% block header %}

<div data-role="header">
	<h1>
		SLC
	</h1>
</div>

{% endblock header %}

{% block content %}

{# This part is optional, it contains the message a function returns #}
{% if message is defined %}
{{ message }}
{% endif %}

<div data-theme="a" data-role="collapsible-set">

	<div data-role="collapsible">
		<h3>Cursus beheer</h3>

		<div data-role="collapsible">
			<h3>Cursus toevoegen</h3>
			<a href="{{ constant('BASE') }}/slc/{{ id }}/course/add" data-role="button">Nieuwe course</a>
		</div>

		<div data-role="collapsible">
			<h3>Cursus wijzigen</h3>
			<table id="my-table">
				<thead>
					<tr>
						<th>Cursus ID</th>
						<th>Cursus Naam</th>
						<th>Cursus Code</th>
						<th>Docent</th>
					</tr>
				</thead>
				<tbody>
					{% for course in courses %}
					<tr>
						<td>{{ course.cursus_Id }}</td>
						<td>{{ course.cursus_Name }}</td>
						<td>{{ course.cursus_Code }}</td>
						<td>{{ course.User_user_Id }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<div data-role="collapsible">
			<h3>Cursus verwijderen</h3>
			<p>I'm the collapsible set content for section 2.</p>
		</div>

	</div>

	<div data-role="collapsible">
		<h3>Gebruikers Beheer</h3>

		<div data-role="collapsible">
			<h3>Gebruiker toevoegen</h3>
			<a href="{{ constant('BASE') }}/slc/{{ id }}/student/add" data-role="button">Nieuwe Student</a>
		</div>

		<div data-role="collapsible">
			<h3>Gebruiker wijzigen</h3>
			<p>I'm the collapsible set content for section 2.</p>
		</div>

		<div data-role="collapsible">
			<h3>Gebruiker verwijderen</h3>
			<p>I'm the collapsible set content for section 2.</p>
		</div>

		<div data-role="collapsible">
			<h3>Gebruiker koppelen aan cursus</h3>
			<p>I'm the collapsible set content for section 2.</p>
		</div>

	</div>

</div>

{% endblock content %}
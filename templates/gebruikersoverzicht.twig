{% extends "layouts/base.twig" %}

{% block header %}

<div data-role="header">
	<h1>
		Gebruikersoverzicht
	</h1>
</div>

{% endblock header %}

{% block content %}

<h4>Gebruikersoverzicht</h4>

{% if studenten %}

<table data-role="table" id="table-column-toggle" data-mode="columntoggle" class="ui-responsive table-stroke">
	<thead>
		<tr>
			<th>Naam</th>
			<th>Zie profiel</th>
		</tr>
	</thead>
	<tbody>

		{% for student in studenten %}

		<tr>
			<td>{{ student.user_Name|capitalize }}</td>
			<td><a href="{{ constant('BASE') }}/docent/{{ id }}/gebruikers/{{ student.user_Id }}" data-role="button">&#10004;</a></td>
		</tr>

		{% endfor %}

	</tbody>
</table>

{% else %}

Geen studenten om weer te geven

{% endif %}

{% endblock content %}